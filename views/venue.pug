extends basiclayout

block headcontent
    style.
        h1{
            text-align: center;
            font-size: 3em;
            margin-top: 0.75em;
        }

        span.name{
            color: #000;
            display: inline-block;
            margin-right: 1em;
        }

        #details .tag {
            font-weight: bold;
        }

        #details div {
            margin: 0.25em 0;
        }



block bodycontent

    - var noRating = false;
    - var rating = 3.5; //TODO replace with real rating

    .col-md-6.col-lg-4.col-centered
        h1
            span.name
                | #{venueData.name}

            if noRating
                - var n = 1;
                while n <= 5
                    i.fa.fa-question-circle-o(aria-hidden='true')
            else
                - var n = 1;
                while n <= rating
                    - n++;
                    i.fa.fa-star(aria-hidden='true')

                - var showHalfStar = ((rating.toFixed(1) % 0.5) % 2) == 0
                if showHalfStar
                    i.fa.fa-star-half-o(aria-hidden='true')

                - var starsLeft = 5 - n;
                while starsLeft >= 1
                    - starsLeft--;
                    i.fa.fa-star-o(aria-hidden='true')

        h2 Details

        #details.row
            .col-md-6
                .row
                    .col-xs-4.tag Name:
                    .col-xs-8 #{venueData.name}
                    .col-xs-4.tag Address:
                    .col-xs-8.
                        #{venueData.street} #{venueData.house_number} <br>
                        #{venueData.postal_code} #{venueData.city} <br>
                        #{venueData.country}
                    .col-xs-4.tag Phone:
                    .col-xs-8 #{venueData.phone_number}
                    .col-xs-4.tag Email:
                    .col-xs-8 #{venueData.email}
            .col-md-6
                .tag Opening Hours:
                div !{venueData.opening_hours.replace(/\n/g, '<br/>')}

