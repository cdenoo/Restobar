extends basiclayout

block bodycontent
    div(class="bodytitle")
        h1 Welcome!
    .row
        .col-md-2.col-md-offset-3
            h3 I have an account

            form(class="form-horizontal" method="POST" action="/register")
                div.form-group
                    input#username.form-control(type="text", placeholder="Username" name="username")
                div.form-group
                    input#pw.form-control(type="password", placeholder="Password" name="password")
                button.btn.btn-primary(type="submit") Log in
        .col-md-2.col-md-offset-2
            h3 I'm new here
            p It takes only a few minutes to register. Press Sign Up and enjoy!
            form(class="form-horizontal" method="POST" action="/register")
                 button.btn.btn-primary(type="submit") Sign up
