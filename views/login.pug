extends basiclayout

block bodycontent
    div(class='col-lg-4 col-centered')
        div(class="jumbotron pageTitle")
            h1 Welcome!
        div(class='container-fluid')
            div(id='loginPanel' class='panel panel-default')
                div(class='panel-body')
                    div(class='panel-body-content')
                        h3 I have an account
                        form(class="form-horizontal" method="POST")
                            div(class='form-group')
                                input(id='username' class='form-control' type='text' placeholder='Username' name='username')
                            div(class='form-group')
                                input(id='password' class='form-control' type='password' placeholder='Password' name='password')
                            button(type='submit' class='btn btn-default inactive') Log in
                    div(class='panel-body-content')
                        h3 I'm new here
                        p It takes only a few moments to register. Press Sign Up and enjoy!
                        a(class='btn btn-default inactive' href='/register') Register